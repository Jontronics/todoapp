<h1>{{title}}</h1>
<p>Welcome to the fancy todo list landing page {{title}}</p>

<form class="form" action="/todo" method="post">
  <div class="form-group">  
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Enter a to do objective" name="title">
  </div>  
  
  <div class="form-group">
    <label for="description">description</label>
    <textarea type="text" class="form-control" id="description" placeholder="Enter a description" name="description"></textarea>
  </div>  
  
  <div class="form-group">
    <label for="priority">priority</label>
    <select class="form-control" id="priority" name="priority">
      
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>



<a href="/todo/" type="button" class="btn btn-default btn-">
  GO ! to list !
</a>
